<mvc:View
  controllerName="inv.mgm.inventorymanagement.controller.Inbound"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Page title="Inbound Material" showNavButton="true"
    navButtonPress=".onNavBack" class="sapUiResponsivePadding--content">
    <Panel headerText="Inbound Entry" class="sapUiSmallMargin">
      <VBox class="sapUiSmallMargin">
        <Label text="Material" labelFor="materialInput" />
        <HBox>
          <Input
            id="materialInput"
            placeholder="Scan or enter material"
            value="{/selectedMaterial}"
            width="100%"
          />
          <Button
            icon="sap-icon://bar-code"
            press=".onScanMaterial"
            tooltip="Scan Material"
            class="sapUiTinyMarginBegin"
          />
        </HBox>

        <Label text="Quantity" class="sapUiSmallMarginTop" />
        <Input
          placeholder="Quantity"
          type="Number"
          value="{/quantity}"
        />

        <Label text="Storage Location" class="sapUiSmallMarginTop" />
        <Select
          items="{staticData>/storageLocations}"
          selectedKey="{/selectedLocation}"
        >
          <core:Item key="{staticData>id}" text="{staticData>name}" />
        </Select>

        <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween">
          <Button text="Confirm Inbound" press=".onSubmit" type="Emphasized" />
          <Button text="Reset" press=".onReset" type="Transparent" />
        </HBox>
      </VBox>
    </Panel>
  </Page>
</mvc:View>
