<mvc:View
  controllerName="inv.mgm.inventorymanagement.controller.StockLookup"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <VBox class="sapUiSmallMargin">
    <Title text="Stock Lookup" />

    <HBox>
      <Input
        id="stockLookupInput"
        placeholder="Scan or enter material code"
        value="{/stockLookupMaterial}"
        width="70%"
      />
      <Button
        icon="sap-icon://barcode-scan"
        press=".onScanStockLookup"
        tooltip="Scan Material"
        width="30%"
      />
    </HBox>

    <Text
      text="{/stockDetails}"
      class="sapUiSmallMarginTop"
    />

  </VBox>
</mvc:View>
